@{
    // 11/09/2019 10:42 am - SSN - Added
    try
    {

        string path = Context.Request.Path.ToString().ToLower();
        bool addSiteScript = false;

        List<string> applicablePaths = new List<string>() { "/projects", "/companies", "/Discipline", "/jobs", "/ReferenceSites", "/devsites" };
        addSiteScript = applicablePaths.Any(r => path.StartsWith(r.ToLower()));
        if (addSiteScript)
        {
            <script src="/webpack_build/bundle_Site_only.js"></script>
        }

    }
    catch (Exception)
    {
        // Todo: log error
    }
}


@{


    if (Program.RunWhatJavaScriptVersion == Program.whatJavaScriptVersion.Original)
    {

        <script src="~/js/IAngularApp.js" asp-append-version="true"></script>
        <script src="~/js/IColumnBag.js" asp-append-version="true"></script>
        <script type="module" src="~/js/globals.js" asp-append-version="true"></script>

        <environment names="Development">
            <script type="module" src="~/js/site.js" asp-append-version="true"></script>
        </environment>

        <environment names="Production">
            <script type="module" src="~/js/site.min.js" asp-append-version="true"></script>
        </environment>

    }




    if (Program.RunWhatJavaScriptVersion == Program.whatJavaScriptVersion.Babel_Only)
    {

        <script type="module" src="~/babel_lib/IAngularApp.js" asp-append-version="true"></script>
        <script type="module" src="~/babel_lib/IColumnBag.js" asp-append-version="true"></script>
        <script type="module" src="~/babel_lib/globals.js" asp-append-version="true"></script>

        <environment names="Development">
            <script type="module" src="~/babel_lib/site.js" asp-append-version="true"></script>
        </environment>

        <environment names="Production">
            <script src="~/babel_lib/site.min.js" asp-append-version="true"></script>
        </environment>

    }



}

