        *@

        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.Project.DateAdded)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Project.DateAdded)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Project.DateModified)
            </dt>
