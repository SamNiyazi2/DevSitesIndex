@page
@model DevSitesIndex.Pages.Projects.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Project</h4>
<div asp-validation-summary="All" class="text-danger"></div>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Project.ProjectTitle" class="control-label"></label>
                <input asp-for="Project.ProjectTitle" class="form-control" autofocus />
                <span asp-validation-for="Project.ProjectTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.CompanyID" class="control-label"></label>
                @{
                    var x = Model.companiesSL;
                }
                <select asp-for="Project.CompanyID" class="form-control" asp-items="Model.companiesSL">
                    <option>Select...</option>
                </select>
                <span asp-validation-for="Project.CompanyID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Project.DateAdded" class="control-label"></label>
                <input asp-for="Project.DateAdded" class="form-control" />
                <span asp-validation-for="Project.DateAdded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
