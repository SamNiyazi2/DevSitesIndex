@page
@model DevSitesIndex.IndexModel

@{
    ViewData["Title"] = "Discipline Index";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-page="Create">Create New Discipline</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Discipline[0].DisciplineShort)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Discipline[0].DateAdded)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Discipline[0].DateModified)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Discipline) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DisciplineShort)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateAdded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateModified)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.DisciplineId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.DisciplineId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.DisciplineId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
