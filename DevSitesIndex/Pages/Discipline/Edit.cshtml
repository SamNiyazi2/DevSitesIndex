@page
@model DevSitesIndex.EditModel

@{
    ViewData["Title"] = "Edit Discipline";
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">

        @*
            // 09/24/2019 12:30 pm - SSN - [20190924-1134] - [008] - Removing date add/updated from create/edit pages
        *@
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Discipline.DateAdded)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Discipline.DateAdded)
            </dd>
            @{
                if (Model.Discipline.DateModified != null)
                {

                    <dt>
                        @Html.DisplayNameFor(model => model.Discipline.DateModified)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Discipline.DateModified)
                    </dd>
                }
            }
        </dl>


        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Discipline.DisciplineId" />
            <div class="form-group">
                <label asp-for="Discipline.DisciplineShort" class="control-label"></label>
                <input asp-for="Discipline.DisciplineShort" class="form-control" autofocus />
                <span asp-validation-for="Discipline.DisciplineShort" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
