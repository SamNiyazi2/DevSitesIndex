@model DevSitesIndex.Pages.CodeReferences.IndexModel

@{
    ViewData["Title"] = "Code Reference - Index";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
@{

    Model.searchResultsfeedbackMessage_prep();
    var test101 = @Model.searchOptionCustomClassName;
}
<div class="searchOption_Container @Model.searchOptionCustomClassName">

    <div class="searchOption @Model.searchOptionCustomClassName">

        <form method="post">

            @*02/07/2019 03:00 pm - SSN - Adding*@
            <div class="form-group">
                <input asp-for="doDecodeHtml" doRefreshForm="1" /> Decode HTML
            </div>

            <div>
                @*02/07/2019 02:40 pm - SSN - Removed class="form-group" when adding doHighlight*@
                <label class="control-label">Search</label>
                <input asp-for="SearchText" class="form-control" />
                <span asp-validation-for="SearchText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="doHeightlight_v02" doRefreshForm="1" />

                Highlight matches
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-default" />
                <a href="" class="btn btn-default ">Clear search</a>
            </div>
        </form>

        @Model.searchOptionFeedbackMessage

    </div>

</div>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CodeReference[0].SourceAddress) /
                @Html.DisplayNameFor(model => model.CodeReference[0].CodeBlock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodeReference[0].DateAdded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodeReference[0].DateModified)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CodeReference)
        {
            <tr>
                <td>
                    <p>
                        @Html.DisplayFor(modelItem => item.SourceAddress)
                    </p>
                    <pre class="codeblock2">
@{ 

    @Model.ShowPos("101")

    if (Model.doDecodeHtml)
    {

    @Model.ShowPos("102")

        if (Model.doHeightlight_v02)
        {

    @Model.ShowPos("103")

        @Html.Raw(System.Net.WebUtility.HtmlDecode(item.CodeBlock))
        }
        else
        {

    @Model.ShowPos("104")

        @Html.Raw(System.Net.WebUtility.HtmlDecode(item.CodeBlock))
        }
    }
    else
    {

    @Model.ShowPos("105")

        if (Model.doHeightlight_v02)
        {

    @Model.ShowPos("106")

            @Html.Raw(Model.HighlightText(item.CodeBlock))
        }
        else
        {

    @Model.ShowPos("107")

           @item.CodeBlock

            }

        }

    }




                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateAdded)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateModified)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" asp-route-SearchText="@Model.SearchText">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



@section Scripts {
    <script>

        $(function () {

            $('[doRefreshForm]').on('click', function (e) {

                $(document.forms[0]).submit();

            });

        });



        $(window).scroll(function () {

            $("#SearchText").val( '"' + $(document).height() + "-" + $(window).height() + "-" + $(window).scrollTop() + '"' );
            if ($(document).height() > $(window).height()) {
                if ($(window).scrollTop() > 100) {
                    $(".searchOption ").addClass("fixed_101");
                } else {
                    $(".searchOption ").removeClass("fixed_101");
                }
            }

        });



    </script>
}

<style>

    .searchOption_Container {
        height: 220px;
        width: 300px;
        position: relative;
    }

    .searchOption {
        background-color: white;
        height: 220px;
        width: 300px;
        padding: 20px;
        border: 5px solid black;
        position: relative;
    }


    .searchOption_tall {
        height: 280px;
    }

    .fixed_101 {
        top: 50px;
        position: fixed;
    }
</style>