@page
@model DevSitesIndex.Pages.CodeReferences.DetailsModel

@{
    ViewData["Title"] = "Code Reference Detail";
}

<h2>@ViewData["Title"]</h2>

<div>

    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.CodeReference.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CodeReference.Title)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.CodeReference.SourceAddress)
        </dt>
        <dd>
            @{
                if (!string.IsNullOrWhiteSpace(Model.CodeReference.SourceAddress))
                {
                    @if (Model.CodeReference.SourceAddress.ToLower().StartsWith("http"))
                    {
                        <a target="wincoderef@item.Id" href="@Model.CodeReference.SourceAddress">@Html.DisplayFor(modelItem => modelItem.CodeReference.SourceAddress)</a>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => Model.CodeReference.SourceAddress)
                    }
                }
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CodeReference.DateAdded)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CodeReference.DateAdded)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CodeReference.DateModified)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CodeReference.DateModified)
        </dd>




        <dt>
            @Html.DisplayNameFor(model => model.CodeReference.CodeBlock)
        </dt>


        <dd>
            @*03/29/2019 02:52 am - Added pre block*@
            <pre>
     
            @Html.DisplayFor(model => model.CodeReference.CodeBlock)
</pre>
        </dd>

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.CodeReference.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
