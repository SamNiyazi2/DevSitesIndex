@page
@model DevSitesIndex.Pages.CodeReferences.DeleteModel

@{
    ViewData["Title"] = "Delete Code Reference";
}

<h2>@ViewData["Title"] </h2>

<h3>Are you sure you want to delete this?</h3>
<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CodeReference.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CodeReference.Title)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.CodeReference.SourceAddress)
        </dt>
        
        <dd>
            @await Html.PartialAsync("CodeReference_partial", Model.CodeReference)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CodeReference.DateAdded)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CodeReference.DateAdded)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CodeReference.DateModified)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CodeReference.DateModified)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CodeReference.CodeBlock)
        </dt>
        <dd>
            <pre>
     
 
            @Html.Raw(Model.CodeReference.CodeBlock_Encoded)

</pre>
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="CodeReference.Id" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
