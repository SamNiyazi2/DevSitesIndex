        </dt>
        <dd>
            @Html.DisplayFor(model => model.DevSite.SoftwareCode)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DevSite.DateAdded)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DevSite.DateAdded)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DevSite.DateUpdated)
        </dt>
        <dd>
