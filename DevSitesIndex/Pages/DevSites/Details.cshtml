            @Html.DisplayFor(model => model.DevSite.SiteUrl)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DevSite.SolutionName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.DevSite.SolutionName)

