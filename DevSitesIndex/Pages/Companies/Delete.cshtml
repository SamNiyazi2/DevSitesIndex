@page
@model DevSitesIndex.Pages.Companies.DeleteModel

@{
    ViewData["Title"] = "Delete Company";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Company.CompanyName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Company.CompanyName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Company.DateAdded)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Company.DateAdded)
        </dd>
    </dl>

    @{ if (Model.projcetCount == 0)

        {
            <form method="post">
                <input type="hidden" asp-for="Company.CompanyID" />
                <input type="submit" value="Delete" class="btn btn-default" /> |
                <a asp-page="./Index">Back to List</a>
            </form>
        }
        else
        {
            <div class="info_bad">
                <p>Companies with project records cannot be deleted.</p>
                <p>Project count: @Model.projcetCount</p>
            </div>
            @*<a asp-page="./Index">Back to List</a>*@
            @await Html.PartialAsync("ReturnToCallerLink", Model.returnToCaller)
        }
    }
</div>
