@page
@model DevSitesIndex.Pages.Companies.DetailsModel

@{
    ViewData["Title"] = "Company Detail";
}

<h2>@ViewData["Title"] </h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Company.CompanyName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Company.CompanyName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Company.DateAdded)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Company.DateAdded)
        </dd>
        @{
            if (Model.Company.DateUpdated != null)
            {

                <dt>
                    @Html.DisplayNameFor(model => model.Company.DateUpdated)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Company.DateUpdated)
                </dd>
            }
        }
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Company.CompanyID">Edit</a> |
    @*<a asp-page="./Index">Back to List</a>*@
    @await Html.PartialAsync("ReturnToCallerLink", Model.returnToCaller)
</div>
